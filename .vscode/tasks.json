{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    // "version": "2.0.0",
    "tasks": [
        {
            "label": "build benchmark_runner",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc",
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
